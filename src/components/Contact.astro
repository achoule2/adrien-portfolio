<section class="bg-white py-24 px-6 md:px-16 lg:px-32 relative">
  <!-- Titre -->
  <div class="text-center mb-16">
    <span class="inline-block bg-green-100 text-green-600 px-4 py-1 rounded-full text-sm font-medium mb-4">Contact</span>
    <h2 class="text-3xl md:text-4xl font-bold leading-tight">
      Discutons de votre projet
    </h2>
    <p class="mt-4 text-base text-gray-700 max-w-2xl mx-auto leading-relaxed">
      Créons quelque chose de nouveau, de différent et de plus significatif — ou rendons les choses plus visuelles et conceptuelles.
    </p>
  </div>

  <!-- Contenu -->
  <div class="grid md:grid-cols-2 gap-16 items-start">
    <!-- Infos de contact -->
    <div class="space-y-8">
      <div class="flex items-start gap-4">
        
        <div>
          <p class="text-base font-semibold text-gray-800">Appelez-moi</p>
          <p class="text-sm text-gray-600">+0602097500</p>
        </div>
      </div>

      <div class="flex items-start gap-4">
       
        <div>
          <p class="text-base font-semibold text-gray-800">Envoyez-moi un e-mail</p>
          <p class="text-sm text-gray-600">adrienchoulet1@gmail.com</p>
        </div>
      </div>

      <div class="flex items-start gap-4">
        
        <div>
          <p class="text-base font-semibold text-gray-800">Adresse</p>
          <p class="text-sm text-gray-600">25200 Montbéliard</p>
        </div>
      </div>
    </div>

    <!-- Formulaire -->
    <form class="space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="text" placeholder="Nom et prénom" class="w-full border border-gray-300 rounded-md px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" />
        <input type="email" placeholder="Votre email" class="w-full border border-gray-300 rounded-md px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" />
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="tel" placeholder="Numéro de téléphone" class="w-full border border-gray-300 rounded-md px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" />
        <input type="text" placeholder="Budget" class="w-full border border-gray-300 rounded-md px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" />
      </div>
      <textarea placeholder="Message" rows="5" class="w-full border border-gray-300 rounded-md px-4 py-3 text-sm resize-none focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
      <div class="text-right">
        <button type="submit" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition text-sm font-medium">
          Envoyer un message
        </button>
      </div>
    </form>
  </div>

  <!-- Points décoratifs -->
  <div class="absolute top-4 right-4 flex gap-2 pointer-events-none">
    <div class="w-2 h-2 bg-red-500 rounded-full"></div>
    <div class="w-2 h-2 bg-green-500 rounded-full"></div>
    <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
    <div class="w-2 h-2 bg-red-500 rounded-full"></div>
  </div>
</section>

