---
const navLinks = [
  { name: 'Moi ', href: '/' },
  { name: 'Compétences', href: '/Competences' },
  { name: 'Portfolio', href: '/portfolio' },
  { name: 'Témoignage ', href: '/témoignage ' },
  
];
---

<header class="flex items-center justify-between px-6 md:px-12 py-6 bg-white relative">
  <!-- Nom -->
  <h1 class="text-2xl font-bold text-green-600">Adrien Choulet</h1>

  <!-- Navigation -->
  <nav class="hidden md:flex space-x-8 text-gray-800 font-medium">
    {navLinks.map(link => (
      <a href={link.href} class="hover:text-green-600 transition">{link.name}</a>
    ))}
  </nav>

  <!-- Bouton CV -->
  <a href="/image 209.png" class="border-2 border-green-600 text-green-600 px-4 py-2 rounded-lg hover:bg-green-50 transition text-sm font-semibold">
    Téléchargez CV
  </a>

  <!-- Décoratif : points colorés -->
  <div class="absolute inset-0 pointer-events-none z-0">
    <div class="absolute top-4 left-4 w-2 h-2 bg-green-500 rounded-full"></div>
    <div class="absolute top-2 left-1/2 w-2 h-2 bg-red-500 rounded-full"></div>
    <div class="absolute top-6 right-1/3 w-2 h-2 bg-blue-600 rounded-full"></div>
    <div class="absolute bottom-2 left-1/4 w-2 h-2 bg-gray-700 rounded-full"></div>
    <div class="absolute bottom-4 right-6 w-2 h-2 bg-green-500 rounded-full"></div>
  </div>
</header>

